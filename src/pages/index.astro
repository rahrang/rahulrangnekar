---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

import profileImage from '../images/rahul-stressba.png';
import H1 from '~/components/H1.astro';
import { cn } from '~/utils/css';
import { PROSE_CLASSNAME } from '~/utils/prose';
---

<Layout>
  <main
    class="container mx-auto px-4 sm:px-8 pt-8 pb-16 flex flex-col items-center"
  >
    <section class={cn(PROSE_CLASSNAME, 'flex flex-col items-center')}>
      <Image
        src={profileImage}
        alt="Rahul Rangnekar"
        height={300}
        width={300}
        class="rounded-full border-4 border-accent p-1"
      />

      <H1 class="text-center">👋🏽 Hi, I’m Rahul</H1>

      <p>I live in San Francisco with my amazing wife, Kimi.</p>

      <p>
        I enjoy creating fun side projects, reading about credit cards, booking
        award travel, and following countless shiba inu accounts on social
        media. During the day, I build product for <a
          href="https://www.vanta.com"
          target="_blank"
          class="underline decoration-accent hover:text-accent focus:text-accent"
          >Vanta</a
        >.
      </p>

      <a
        href="/blog"
        class="border border-sm no-underline px-3 py-1 rounded-sm hover:bg-accent/20 focus:bg-accent/20"
        >Read my blog</a
      >
    </section>
  </main>
</Layout>
